<div class="container">
	<div class="row justify-content-center">
		<div class="col-sm-6">
			<h1> <%= form_title %> </h1>
			<%= form_for @product do |f| %>
				<div class="form-group">
					<%= f.text_field :name, class: "form-control", placeholder: "Ingresa el nombre del producto" %>
				</div>
				<div class="form-group">
					<%= f.url_field :url, class: "form-control", placeholder: "Ingresa la URL del producto (http://mypage.com)" %>
				</div>
				<div class="form-group">
					<%= f.text_area :description, class: "form-control", placeholder: "Ingresa la descripciÃ³n del producto" %>
				</div>

				<div>
					<%= f.submit form_title, class: "btn btn-primary btn-lg btn-block" %>
				</div>
			<% end %>
		</div>
	</div>
</div>